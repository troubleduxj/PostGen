{
  "name": "poster-maker",
  "version": "1.0.0",
  "description": "ðŸŽ¨ Professional poster maker with modern React architecture - Create stunning posters with ease",
  "type": "module",
  "author": {
    "name": "Poster Maker Team",
    "email": "team@postermaker.com",
    "url": "https://github.com/poster-maker"
  },
  "license": "MIT",
  "homepage": "https://poster-maker.github.io/poster-maker",
  "repository": {
    "type": "git",
    "url": "https://github.com/poster-maker/poster-maker.git"
  },
  "bugs": {
    "url": "https://github.com/poster-maker/poster-maker/issues"
  },
  "keywords": [
    "poster",
    "design",
    "editor",
    "canvas",
    "react",
    "typescript",
    "fabric.js",
    "graphic-design",
    "image-editor",
    "web-app"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "dev:port": "vite --port 3000 --host",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview --host",
    "preview:port": "vite preview --port 4173 --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:check": "eslint . --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install",
    "test": "echo \"No tests specified\" && exit 0",
    "test:watch": "echo \"No tests specified\" && exit 0",
    "test:coverage": "echo \"No tests specified\" && exit 0",
    "prepare": "husky install || true",
    "postinstall": "echo \"âœ… Installation completed successfully!\"",
    "start": "npm run dev",
    "serve": "npm run preview"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "antd": "^5.12.8",
    "canvas2svg": "^1.0.16",
    "clsx": "^2.0.0",
    "fabric": "^5.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.16",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/fabric": "^5.3.7",
    "@types/file-saver": "^2.0.7",
    "@types/jspdf": "^1.3.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
